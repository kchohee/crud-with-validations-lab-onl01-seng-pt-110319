<%= form_for(@song) do |f|%>
    <%if @song.errors.any? %>
    <div id="error_explanaation">
        <h1> We ran into <%= pluralize(@song.errors.size, " error(s)") %> :</h1>
        <ul>
            <% @song.errors.full_messages.each do |m|%>
            <li> <% m %> </li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
        <%= f.label :released %><br>
        <%= f.check_box :released %>
        <%= f.label :release_year %><br>
        <%= f.number_field :release_year %>
        <%= f.label :genre %><br>
        <%= f.text_field :genre %>
        <%= f.label :artist_name %><br>
        <%= f.text_field :artist_name %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>